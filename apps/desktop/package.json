{
  "name": "desktop",
  "version": "0.0.0",
  "private": true,
  "main": "dist/main/index.cjs",
  "scripts": {
    "dev": "npm run watch:desktop -w ../../packages/scripts",
    "start": "electron .",
    "build": "npm run build:main & npm run build:preload",
    "build:main": "tsc -p ./main/tsconfig.json && vite build main",
    "build:preload": "tsc -p ./preload/tsconfig.json && vite build preload"
  },
  "devDependencies": {
    "@types/node": "^18.7.18",
    "electron": "20.1.4",
    "electron-builder": "23.3.3",
    "vite": "^3.1.1"
  }
}

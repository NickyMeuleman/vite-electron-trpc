{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext"],
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "references": [{ "path": "../../../tsconfig.node.json" }]
}
